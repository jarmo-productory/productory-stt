#!/bin/sh

# This hook runs more comprehensive checks before pushing to the remote repository
# It's similar to what your CI/CD pipeline might run

echo "ğŸš€ Running pre-push checks..."

# Run ESLint with strict checking (no warnings allowed)
echo "ğŸ” Running ESLint in strict mode..."
npm run lint:strict || { echo "âŒ ESLint check failed. Please fix the errors before pushing."; exit 1; }

# Run TypeScript type checking on the entire project
echo "ğŸ” Running TypeScript type checking..."
npm run typecheck || { echo "âŒ TypeScript check failed. Please fix the type errors before pushing."; exit 1; }

# Run tests
echo "ğŸ§ª Running tests..."
npm run test || { echo "âŒ Tests failed. Please fix the failing tests before pushing."; exit 1; }

echo "âœ… All checks passed! Pushing to remote repository..."
